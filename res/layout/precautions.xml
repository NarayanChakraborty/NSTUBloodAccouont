<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
 android:id="@+id/scrollView1"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:layout_alignParentLeft="true"
 android:layout_alignParentTop="true" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="461dp"
    android:background="@drawable/p"
    android:gravity="top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Disorders of Blood"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:lineSpacingExtra="1dp"
        android:scrollHorizontally="false"
        android:text="1.Anaemia(Various Types)\n2.Idiopathic Thrombocytopenic Purpura(ITP)\n 3.Leukaemia \n 4.Sickle Cell Eisease and Sickle Cell Anaemia \n 5.Sickle cell Trait and Sickle Cell Screening Tests \n 6.Thalassaemia \n 7.Thrombophilia \nDetails of the above disorders can be found at www.patient.co.uk/displayCategory/16777275  "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="19sp" />

    <Button
        android:id="@+id/marriage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/button"
        android:text="Marriage"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>
    </ScrollView>
